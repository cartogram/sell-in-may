<!doctype html>
<!--[if lt IE 7]> <html class="no-touch no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]> <html class="no-touch no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]> <html class="no-touch no-js lt-ie9" lang="en"> <![endif]-->
<!--[if IE 9]> <html class="ie9 no-touch no-js"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-touch no-js"> <!--<![endif]-->

<head>
  <meta charset="UTF-8">
  <meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'>
  <link rel="shortcut icon" type="image/png" href="{{ 'favicon.png' | asset_url }}">

  <title>
    {% if template == 'index' %}{% if page_title contains 'Welcome' %}{{ shop.name }} &ndash; Welcome{% else %}{{ page_title }}{% endif %}{% elsif template == '404' %}{{ settings.404_title }}{% elsif page_title contains shop.name %}{{ page_title }}{% else %}{{ page_title }} &ndash; {{ shop.name }}{% endif %}
  </title>

  {% if page_description %}
  <meta name="description" content="{{ page_description }}">
  {% endif %}

  <link rel="canonical" href="{{ canonical_url }}">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  {% include 'snippet-open-graph-tags' %}
  {% include 'twitter-cards' %}

  {{ 'style.scss.css' | asset_url | stylesheet_tag }}

  {{ content_for_header }}

  {% include 'oldIE-js' %}

  {% include 'snippet-google-fonts' %}

  {{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' | script_tag }}
  {{ 'modernizr.min.js' | asset_url | script_tag }}

  {% if template contains 'customers' %}
  {{ 'customer.css' | asset_url | stylesheet_tag }}
  {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
  {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
  {% endif %}

</head>

<body id="{{ page_title | handle }}" class="{% if customer %}customer-logged-in {% endif %}template-{{ template | split: '.' | first | remove: '/' | remove: '_' }}">

  <div class="wrapper">

    <header class="site-header">

      <div class="cart-summary accent-text">

        {% if shop.customer_accounts_enabled %}
          <p class="large--left medium-down--hide">
          {% if customer %}
            Logged in as <a href="/account">{{ customer.first_name }}</a> · {{ "Logout" | customer_logout_link }}
          {% else %}
            {{ 'Log in' | customer_login_link }}{% if shop.customer_accounts_optional %} or {{ 'Create an account' | customer_register_link }}{% endif %}
          {% endif %}
          </p>
        {% endif %}

        {% if settings.show_multiple_currencies %}
          {% include 'snippet-currency-picker' %}
        {% endif %}

        <p id="cart-count" class="large--right">
          <a class="no-underline" href="/cart">{{ cart.item_count}} {{ cart.item_count | pluralize: 'item', 'items' }}<span id="cart-total-small">({{ cart.total_price | money }})</span></a> ·
          <a href="/cart">Check out</a>
        </p>

        <form action="/search" method="get" id="search-form" role="search" class="large--right">{% if settings.search_products_only %}
            <input type="hidden" name="type" value="product">{% endif %}
            <input name="q" type="text" id="search-field" placeholder="Search store..." class="hint">
            <button type="submit" value="" name="submit" id="search-submit" class="icon-fallback-text">
                <span class="icon icon-search" aria-hidden="true"></span>
                <span class="fallback-text">Search</span>
            </button>
        </form>

        <a href="/cart" id="cart-total">
          {% if shop.money_format == '${{amount}}' %}
            <span id="cart-price">{{ cart.total_price | money | replace: '.00', '' }}</span>
          {% else %}
            <span id="cart-price">{{ cart.total_price | money  }}</span>
          {% endif %}
        </a>

      </div>

      {% if settings.logo_alignment == 'center' %}
        {% assign logo_center = true %}
      {% endif %}
      <div class="grid-full nav-bar{% unless logo_center %} nav-bar--left{% endunless %}">
        <div class="grid-item {% if logo_center %} col-12{% else %}col-5 medium-down--col-12{% endif %}">
          {% if settings.use_logo %}
            <a id="logo" href="/" role="banner">
              {{ 'logo.png' | asset_url | img_tag: shop.name }}
            </a>
          {% else %}
            <h1 id="title"><a href="/">{{ shop.name }}</a></h1>
          {% endif %}

          {% if settings.use_logo and template == 'index' %}
            <h1 class="hidden">{{ shop.name }}</h1>
          {% endif %}
        </div>
        <div class="grid-item {% if logo_center %} col-12{% else %}col-7 medium-down--col-12{% endif %}">
          <nav id="navWrap" role="navigation">
            <ul id="nav">
              {% for link in linklists.main-menu.links %}
                {% assign has_drop_down = false %}
                {% assign child_list_handle = link.title | handle %}
                {% comment %}If the link uses the arabic, hebrew or cyrillic alphabet, or is in Chinese or Japanese, the handle will be empty.{% endcomment %}
                {% if child_list_handle == '' %}
                  {% for i in (0..8) %}
                    {% unless has_drop_down %}
                      {% if forloop.first %}
                        {% assign temp = 'link-list' %}
                      {% else %}
                        {% capture temp %}link-list-{{ i }}{% endcapture %}
                      {% endif %}
                      {% if linklists[temp] and linklists[temp].links.size > 0 and linklists[temp].title == link.title %}
                        {% assign has_drop_down = true %}
                        {% assign child_list_handle = temp %}
                      {% endif %}
                    {% endunless %}
                  {% endfor %}
                {% else %}
                  {% if linklists[child_list_handle] and linklists[child_list_handle].links.size > 0 %}
                    {% assign has_drop_down = true %}
                  {% endif %}
                {% endif %}
                <li class="nav-item{% if forloop.first %} first{% endif %}{% if link.active %} active{% endif %}{% if has_drop_down %} has-dropdown{% endif %}">
                  <a class="nav-item-link" href="{{ link.url }}">{{ link.title }}{% if has_drop_down %} <span class="icon icon-arrow-down" aria-hidden="true"></span>{% endif %}</a>
                  {% if has_drop_down %}
                  <ul class="sub-nav">
                    {% for l in linklists[child_list_handle].links %}
                    <li class="sub-nav-item{% if forloop.first %} first{% elsif forloop.last %} last{% endif %}">
                      <a class="sub-nav-item-link {% if forloop.first %}first{% endif %} {% if forloop.last %}last{% endif %}" href="{{ l.url }}">{{ l.title }}</a>
                    </li>
                    {% endfor %}
                  </ul>
                  {% endif %}
                </li>
              {% endfor %}
            </ul>
          </nav>
        </div>
      </div>

    </header>

    <div id="content" role="main">
      {% if template == 'list-collections' %}
        {% if settings.ll_collections != '' and linklists[settings.ll_collections].links.size > 0 %}
          {% include 'snippet-collection-listing' with settings.ll_collections %}
        {% else %}
          {% include 'snippet-collection-listing' %}
        {% endif %}
      {% else %}
        {{ content_for_layout }}
      {% endif %}
    </div><!-- #content -->

    {% unless settings.show_about_module == false and settings.show_contact_module == false and settings.show_mailing_list_module == false %}
      <footer id="footer">
        <div class="grid">
          {% if settings.show_about_module %}
            <div class="grid-item col-4 medium--col-6 small--col-12 ft-module" id="about-module">
              <h3>{{ settings.about_module_title | strip_html }}</h3>
              <div id="about-description" class="clearfix">
                {{ settings.about_module_text | newline_to_br }}
              </div>
              <ul class="social-links inline-list">
                {% if settings.social_twitter != blank %}
                  <li>
                    <a class="icon-fallback-text" href="{{ settings.social_twitter }}" title="{{ shop.name }} on Twitter">
                      <span class="icon icon-twitter" aria-hidden="true"></span>
                      <span class="fallback-text">Twitter</span>
                    </a>
                  </li>
                {% endif %}
                {% if settings.social_facebook != blank %}
                  <li>
                    <a class="icon-fallback-text" href="{{ settings.social_facebook }}" title="{{ shop.name }} on Facebook">
                      <span class="icon icon-facebook" aria-hidden="true"></span>
                      <span class="fallback-text">Facebook</span>
                    </a>
                  </li>
                {% endif %}
                {% if settings.social_tumblr != blank %}
                  <li>
                    <a class="icon-fallback-text" href="{{ settings.social_tumblr }}" title="{{ shop.name }} on Tumblr">
                      <span class="icon icon-tumblr" aria-hidden="true"></span>
                      <span class="fallback-text">Tumblr</span>
                    </a>
                  </li>
                {% endif %}
                {% if settings.social_instagram != blank %}
                  <li>
                    <a class="icon-fallback-text" href="{{ settings.social_instagram }}" title="{{ shop.name }} on Instagram">
                      <span class="icon icon-instagram" aria-hidden="true"></span>
                      <span class="fallback-text">Instagram</span>
                    </a>
                  </li>
                {% endif %}
                {% if settings.social_pinterest != blank %}
                  <li>
                    <a class="icon-fallback-text" href="{{ settings.social_pinterest }}" title="{{ shop.name }} on Pinterest">
                      <span class="icon icon-pinterest" aria-hidden="true"></span>
                      <span class="fallback-text">Pinterest</span>
                    </a>
                  </li>
                {% endif %}
                {% if settings.social_youtube != blank %}
                  <li>
                    <a class="icon-fallback-text" href="{{ settings.social_youtube }}" title="{{ shop.name }} on YouTube">
                      <span class="icon icon-youtube" aria-hidden="true"></span>
                      <span class="fallback-text">YouTube</span>
                    </a>
                  </li>
                {% endif %}
                {% if settings.social_vimeo != blank %}
                  <li>
                    <a class="icon-fallback-text" href="{{ settings.social_vimeo }}" title="{{ shop.name }} on Vimeo">
                      <span class="icon icon-vimeo" aria-hidden="true"></span>
                      <span class="fallback-text">Vimeo</span>
                    </a>
                  </li>
                {% endif %}
                {% if settings.social_rss != blank %}
                  <li>
                    <a class="icon-fallback-text" href="/blogs/{{ settings.social_rss }}.atom" title="{{ shop.name }} RSS">
                      <span class="icon icon-rss" aria-hidden="true"></span>
                      <span class="fallback-text">RSS</span>
                    </a>
                  </li>
                {% endif %}
              </ul>
            </div>
          {% endif %}
          {% if settings.show_contact_module %}
            <div class="grid-item col-4 medium--col-6 small--col-12 ft-module" id="contact-module">
              <h3>{{ settings.contact_module_title | strip_html | truncate:20 }}</h3>

              <ul id="contact-details">
                {% if settings.contact_module_address.size > 0 %}
                <li class="cd-item-1" id="cd-address">
                  {{ settings.contact_module_address | newline_to_br }}
                </li>
                {% endif %}
                {% if settings.contact_module_email.size > 0 %}<li class="cd-item-2" id="cd-email"><strong>Email:</strong> <a href="mailto:{{ settings.contact_module_email }}">{{ settings.contact_module_email }}</a></li>{% endif %}
                {% if settings.contact_module_phone.size > 0 %}<li class="cd-item-2" id="cd-phone"><strong>Phone:</strong> {{ settings.contact_module_phone }}</li>{% endif %}
                {% if settings.contact_module_fax.size > 0 %}<li class="cd-item-2" id="cd-fax"><strong>Fax:</strong> {{ settings.contact_module_fax }}</li>{% endif %}
              </ul>
            </div>
          {% endif %}
          {% if settings.show_mailing_list_module %}
            <div class="grid-item col-4 small--col-12 ft-module" id="mailing-list-module">
              {% if settings.mailing_list_title.size > 0 %}
                <h3>{{ settings.mailing_list_title }}</h3>
              {% endif %}
              {% if settings.mailing_list_tagline.size > 0 %}
                <p>{{ settings.mailing_list_tagline }}</p>
              {% endif %}
              <form action="{{ settings.mailchimp_form_action }}" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank">
                <input type="email" placeholder="your@email.com" name="EMAIL" id="email-input">
                <input type="submit" class="btn styled-submit" value="Sign Up" name="subscribe" id="email-submit">
              </form>
            </div>
          {% endif %}
        </div>
      </footer><!-- #footer -->
      {% endunless %}

      <div id="sub-footer">

        <div class="grid">
          {% if shop.customer_accounts_enabled %}
            <div class="grid-item col-12">
              <div class="footer-nav accent-text large--hide">
                {% if customer %}
                  <a href="/account">Logged in as {{ customer.first_name }}</a>
                  {{ "Logout" | customer_logout_link }}
                {% else %}
                  {{ 'Log in' | customer_login_link }}{% if shop.customer_accounts_optional %}
                  {{ 'Create an account' | customer_register_link }}{% endif %}
                {% endif %}
              </div>
            </div>
          {% endif %}

          <div class="grid-item col-12 large--col-6">
            {% if linklists.footer.links.size > 0 %}
              <div class="footer-nav accent-text" role="navigation">
                {% for link in linklists.footer.links %}
                  <a href="{{ link.url }}" title="{{ link.title }}">{{ link.title }}</a>
                {% endfor %}
              </div>
            {% endif %}
            <p id="shopify-attr" class="accent-text" role="contentinfo">Copyright &copy; {{ "now" | date: "%Y" }} {{ shop.name }}. {{ powered_by_link }}.</p>
          </div>
          {% if settings.show_payment_options %}
            <div class="grid-item col-12 large--col-6 large--text-right payment-types">
              {% for type in shop.enabled_payment_types %}
                <span>
                  <img src="{{ type | payment_type_img_url }}">
                </span>
              {% endfor %}
            </div>
          {% endif %}
        </div>

        <div class="footer-left-content">

        </div> <!-- #footer-left-content -->


      </div><!-- #sub-footer -->

    </div>

    {% comment %}
      Plugins
    {% endcomment %}
    {% if settings.slider_home_enable %}
      {{ 'jquery.flexslider.min.js' | asset_url | script_tag }}
    {% endif %}
    {% if settings.show_multiple_currencies and shop.money_format contains 'money' %}
      {{ '//cdn.shopify.com/s/javascripts/currencies.js' | script_tag }}
      {{ 'jquery.currencies.min.js' | asset_url | script_tag }}
      {% include 'snippet-currencies' %}
    {% endif %}
    {% if settings.social_sharing_blog or settings.social_sharing_products %}
      {{ 'social-buttons.js' | asset_url | script_tag }}
    {% endif %}

    {% comment %}
      Core shop scripts
    {% endcomment %}
    {{ 'plugins.js' | asset_url | script_tag }}
    {{ 'shop.js' | asset_url | script_tag }}

  </body>
</html>
