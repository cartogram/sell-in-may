

<nav class="cd-nav">
    <ul id="cd-primary-nav" class="cd-primary-nav is-fixed">

        {% for link in linklists.main-menu.links %}
        {% assign child_list_handle = link.title | handleize %}

        {% if linklists[child_list_handle].links != blank %}
        <li class="has-children">
            <a aria-haspopup="true" href="{{ link.url }}">{{ link.title }}</a>
            <ul class="cd-secondary-nav is-hidden">
                <li class="go-back"><a href="#0">Menu</a></li>
                <li class="see-all"><a href="{{ link.url }}">{{ link.title }}</a></li>

                {% for childlink in linklists[child_list_handle].links %}
                {% assign grandchild_list_handle = childlink.title | handleize %}
                {% if linklists[grandchild_list_handle].links != blank %}

                <li class="has-children">
                    <a class="zeta" href="{{childlink.url}}">{{childlink.title}}</a>
                    <ul class="is-hidden">

                        {% for grandchildlink in linklists[grandchild_list_handle].links %}
                        {% assign grandgrandchild_list_handle = grandchildlink.title | handleize %}
                        {% if linklists[grandgrandchild_list_handle].links != blank %}

                        <li class="has-children">
                            <a>{{grandchildlink.title}}</a>
                            <ul class="is-hidden">
                                <li class="go-back"><a href="#">{{childlink.title}}</a></li>
                                <li class="see-all"><a href="{{grandchildlink.url}}">All {{grandchildlink.title}}</a></li>
                                {% for grandgrandchildlink in linklists[grandgrandchild_list_handle].links %}

                                    <li><a href="{{grandgrandchildlink.url}}">{{grandgrandchildlink.title}}</a></li>

                                {%endfor%}

                            </ul>
                        </li>

                        {% else %}
                        <li class="nav__item {% if grandchildlink.active %} nav__item--is-active{% endif %}">
                            <a href="{{ grandchildlink.url }}">{{ grandchildlink.title }}</a>
                        </li>
                        {% endif %}
                        {%endfor%}
                    </ul>
                </li>
                {% else %}
                <li class="nav__item {% if link.active %} nav__item--is-active{% endif %}">
                    <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                </li>
                {% endif %}
                {% endfor %}
            </ul>

        </li>
        {% else %}
        <li class=" {% if link.active %} nav__item--is-active{% endif %}">
            <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
        {% endif %}
    {% endfor %}
    </ul>
</nav>
